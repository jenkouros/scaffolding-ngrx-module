{
  "$schema": "http://json-schema.org/schema",
  "$id": "ScaffoldNewProjectSchema",
  "title": "Creates a new project",
  "type": "object",
  "properties": {
    "name": {
      "description": "Name of the project.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Name of the project"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the schematic within.",
      "visible": false
    }
  },
  "required": ["name"]
}
